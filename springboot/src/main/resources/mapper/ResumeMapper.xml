<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ResumeMapper">
    <select id="selectByPage" resultType="com.example.entity.Resume">
        select * from `resume`
        <where>
            <if test="userId != null">and user_id = #{userId}</if>
        </where>
    </select>
    <insert id="insert">
        insert into `resume`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="username != null">username,</if>
            <if test="sex != null">sex,</if>
            <if test="salary != null">salary,</if>
            <if test="education != null">education,</if>
            <if test="experience != null">experience,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="eduExp != null">edu_exps,</if>
            <if test="workExp != null">work_exps,</if>
            <if test="proExp != null">pro_exps,</if>
            <if test="userId != null">user_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="username != null">#{username},</if>
            <if test="sex != null">#{sex},</if>
            <if test="salary != null">#{salary},</if>
            <if test="education != null">#{education},</if>
            <if test="experience != null">#{experience},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="eduExp != null">#{eduExp},</if>
            <if test="workExp != null">#{workExp},</if>
            <if test="proExp != null">#{proExp},</if>
            <if test="userId != null">#{userId},</if>
        </trim>
    </insert>

    <update id="update">
        update `resume`
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="username != null">username = #{username},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="salary != null">salary = #{salary},</if>
            <if test="education != null">education = #{education},</if>
            <if test="experience != null">experience = #{experience},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="eduExp != null">edu_exps = #{eduExp},</if>
            <if test="workExp != null">work_exps = #{workExp},</if>
            <if test="proExp != null">pro_exps = #{proExp},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteById">
        delete from `resume`
        where id = #{id}
    </delete>
</mapper>