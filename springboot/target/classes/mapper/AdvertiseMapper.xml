<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.AdvertiseMapper">
    <select id="selectByPage" resultType="com.example.entity.Advertise">
        select advertise.*, position.name as positionName,
               position.salary as positionSalary,employ.name as employName from `advertise`
        left join `system`.position on advertise.position_id = position.id
        left join `system`.employ on position.employ_id = employ.id
        <where>
            <if test="location != null">location = #{location}</if>
        </where>
    </select>
    <insert id="insert">
        insert into `advertise`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="location != null">location,</if>
            <if test="img != null">img,</if>
            <if test="positionId != null">position_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="location != null">#{location},</if>
            <if test="img != null">#{img},</if>
            <if test="positionId != null">#{positionId},</if>
        </trim>
    </insert>

    <update id="update">
        update `advertise`
        <set>
            <if test="location != null">location = #{location},</if>
            <if test="img != null">img = #{img},</if>
            <if test="positionId != null">position_id = #{positionId},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteById">
        delete from `advertise`
        where id = #{id}
    </delete>

    <select id="selectByTitle" resultType="com.example.entity.Advertise">
        select * from `advertise`
        where location = #{location}
    </select>
</mapper>